                                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <h3 style="color:red; font-size: small; font-weight:bold;">Пожалуйста, не регистрируйтесь, если Вы не являетесь клиентом компании Alliance Motors.</h3>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Регистрировать" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }


</div>

        </div>
    </div>
</div>

