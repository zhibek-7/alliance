@model Car.Orders
@{
    ViewBag.Title = "Private Officce";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-box">
    <div class="container">


        <ul class="tabs">

            <li>

                <input type="radio" name="tabs" id="tab-1" checked>

                <label for="tab-1">
                    Быстрый поиск
                </label>
                <div class="tab-content">
                    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
                    {
                        <div class="search-box1">

                            @Html.TextBox("Part", null, new { data_autocomplete_source = @Url.Action("AutocompleteSearch", "Home") })
                            <a href="#" class="btn"><input type="submit" name="SearchStore" value="Поиск" /></a>
                        </div>
                    }
                </div>
            </li>
            <li>
                <input type="radio" name="tabs" id="tab-2">

                <label for="tab-2">

                    VIN запрос

                </label>
                <div class="tab-content">

                    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
                    {
                        <div class="search-box1">
                            @Html.TextBox("Vin")
                            @Html.DropDownList("SelectedAuto", new SelectList(ViewBag.UniqueAuto, "Value", "Text", "ViewBag.Auto"), "Выберите модель по параметрам")
                            <a href="#" class="btn" style="color:white"><input type="submit" name="SearchVin" value="Поиск" /></a>
                        </div>
                    }
                </div>
            </li>

        </ul>


    </div>
</div>

<div class="context-box">
    <div class="container clearfix">
        
        <h2>Личный кабинет</h2>

            <div class="login">

                <section class="content-wrapper main-content clear-fix">


                    <div class="rounded">
                       <p class="message-success"></p>
                        <div class="clear-fix">
                            <div class="float-left" style="width: 50%; text-align: center; border-right: solid 1px #C8C8C8; border-bottom: solid 1px #C8C8C8; height: 200px;">

                                <div class="float-left" style="width: 50%; text-align: center;">

                                    <a href="@Url.Content("~/PrivateOfficce/")AllOrders" style="color: #576a8f; font-size: 16px; font-weight: 900; text-decoration: none;">
                                        @Html.ActionLink("Все заказы", "AllOrders", "PrivateOfficce")
                                        <br>
                                        <br>
                                        <a href="@Url.Content("~/PrivateOfficce/")AllOrders" style="color: #576a8f; font-size: 16px; font-weight: 900; text-decoration: none;">

                                            <img src="@Url.Content("~/Content/")/images/orders.ico" style="width: 64px;"></a>
                                        </a>
                                    <br>
                                    <br>
                                    Список заказов
                                    <br>
                                    <br>
                                    <br>
                                </div>

                                <div class="float-left" style="text-align: center; width: 49.9%;">
                                    <a href="/Orders/ShowPartnersOrders" style="color: #576a8f; font-size: 16px; font-weight: 900; text-decoration: none;">
                                        @Html.ActionLink(" Заказы с удаленных складов", "ShowPartnersOrders", "PrivateOfficce")
                                        <br>
                                        <br>
                                        <a href="@Url.Content("~/PrivateOfficce/")ShowPartnersOrders" style="color: #576a8f; font-size: 16px; font-weight: 900; text-decoration: none;">
                                           <img src="@Url.Content("~/Content/")/images/orders.ico" style="width: 64px;">
                                       </a>
                                        </a>
                                    <br>
                                    <br>
                                    Список заказов
                                    <br>
                                    <br>
                                    <br>
                                </div>
                                <div class="clear-fix"></div>
                            </div>
                            <div class="float-right" style="text-align: center; width: 49.9%; border-bottom: solid 1px #C8C8C8; height: 200px;">
                                <a href="/Reports" style="color: #576a8f; font-size: 16px; font-weight: 900; text-decoration: none;">
                                    @Html.ActionLink("Отчеты", "Reports", "PrivateOfficce")
                                    <br>
                                    <br>
                                    <a href="@Url.Content("~/PrivateOfficce/")Reports" style="color: #576a8f; font-size: 16px; font-weight: 900; text-decoration: none;">
                                        <img src="@Url.Content("~/Content/")/images/excel.ico" style="width: 64px;">
                                    </a>
                                    </a>
                                <br>
                                <br>
                                Оформление заявки на формирование отчета в формате
                                <br>
                                Excel с последующей отправкой его на Вашу почту
                                <br>
                                <br>
                            </div>
                        </div>
                        <div class="clear-fix">
                            <div class="float-left" style="width: 50%; text-align: center; border-right: solid 1px #C8C8C8; border-bottom: solid 1px #C8C8C8; height: 200px;">
                                <br>
                                <a href="/Invoice" style="color: #576a8f; font-size: 16px; font-weight: 900; text-decoration: none;">
                                    @Html.ActionLink("Накладные", "Invoice", "PrivateOfficce")
                                    <br>
                                    <br>
                                    <a href="@Url.Content("~/PrivateOfficce/")Invoice" style="color: #576a8f; font-size: 16px; font-weight: 900; text-decoration: none;">
                                        <img src="@Url.Content("~/Content/")/images/orders.ico" style="width: 64px;">
                                    </a>
                                </a>
                                <br>
                                <br>
                                Накладные отгруженного товара
                                <br>
                                <br>
                            </div>
                            <div class="float-right" style="text-align: center; width: 49.9%; border-bottom: solid 1px #C8C8C8; height: 200px;">
                                <br>
                                <a href="#" style="color: #576a8f; font-size: 16px; font-weight: 900; text-decoration: none;">
                                    Расшифровка задолженности
                                    <br>
                                    <br>
                                    <a href="@Url.Content("~/PrivateOfficce/")Invoice" style="color: #576a8f; font-size: 16px; font-weight: 900; text-decoration: none;">
                                        <img src="@Url.Content("~/Content/")/images/money-icon.png" style="width: 80px;">
                                    </a>
                                    </a>
                                <br>
                                <br>
                                <br>
                            </div>
                        </div>
                        <div class="clear-fix">
                            <div class="float-left" style="width: 50%; text-align: center; border-right: solid 1px #C8C8C8;border-bottom: solid 1px #C8C8C8;height:210px;">
                                <br>
                                <span style="color: #576a8f; font-size: 16px; font-weight: 900; text-decoration: none;">Прайс-лист</span>
                                <br>
                                <br>
                                <img src="@Url.Content("~/Content/")/images/orders.ico" style="width: 64px;">
                                <br>
                                <br>
                                <table style="margin: auto;">
                                    <tbody>
                                        <tr>
                                            <td colspan="2" style="text-align: center">
                                                @Html.ActionLink("Скачать прайс-лист", "ExportToExcel", new {@class="not-filled recent"})

                                           <br />

                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2" style="text-align: center">
                                               <a href="@Url.Action("Download")" class="not-filled recent">Мастер-файл BOSCH</a>
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>
                                <br>
                            </div>
                           
                       
                            <div class="float-right" style="text-align: center; width: 49.9%;">
                                <div>
                                    <br>
                                    <span style="color: #576a8f; font-size: 16px; font-weight: 900; text-decoration: none;">Личные данные</span>
                                    <table border="0" style="width: 100%; text-align: center">
                                        <tbody>
                                            <tr>
                                                <td style="width: 50%;text-align:right;">ID </td>
                                                <td style="text-align: left"><b>@Session["LogedUserId"]</b></td>
                                            </tr>

                                            <tr>
                                                <td style="width: 50%;text-align:right;">Логин</td>
                                                <td style="text-align: left"><b>@Session["LogedUserName"]</b></td>
                                            </tr>
                                            <tr>
                                                <td style="width: 50%;text-align:right;">Имя</td>
                                                <td style="text-align: left"><b>@Session["LogedUserFullName"].ToString()</b></td>
                                            </tr>
                                            <tr>
                                                <td style="width: 50%;text-align:right;">Фамилия</td>
                                                <td style="text-align: left"><b>@Session["LogedFamilyName"].ToString()</b></td>
                                            </tr>
                                            <tr>
                                                <td style="width: 50%;text-align:right;">E-mail</td>
                                                <td style="text-align: left"><b>@Session["LogedEmail"].ToString()</b></td>
                                            </tr>
                                            <tr>
                                                <td style="width: 50%;">&nbsp;</td>
                                                <td style="text-align: left"> @Html.ActionLink("Изменить e-mail", "EditUserEmail","PrivateOfficce", new {id= ViewBag.UserID }, null)</td>
                                               
                                            <tr>
                                                <td style="width: 50%;">&nbsp;</td>
                                                <td style="text-align: left">@Html.ActionLink("Изменить пароль", "EditUserPassword", "PrivateOfficce", new { id = Session["LogedUserId"]}, null)</td>
                                            </tr>
                                           </tbody>
                                    </table>
                                    <br>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clear-fix"></div>

                </section>
           
            </div>



      
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}





