            @*<a href="#" class="baner"><img src="@Url.Content("~/Content/")upload/baner2.jpg" height="400" width="240" alt=""></a>*@
        </div>
        <div class="right-column">
            <div class="discription">
                @foreach (Section item in ViewBag.Section)
