@model List<Car.Aksii>
<div class="empty-box"></div>
<div class="context-box">
    <div class="container clearfix">


        <section class="content-wrapper main-content clear-fix">


            <div class="rounded">



                @{

                    if (Model != null)
                    {

                        int j = 0;

                        for (int i = 0; i < Model.Count(); i += 4)
                        {

                            j = i;
                            while (j < i + 4 && j < Model.Count())
                            {


                                <h2>
                                    @Model[j].TitleText
                                </h2>
                                <br>
                                <div class="display-field">
                                    @if (Model[j].FullPic != null)
                                     {
                                        <img src="data:image/png;base64, @Convert.ToBase64String(Model[j].FullPic,0,Model[j].FullPic.Length)" class="goAksii_img" />
                                     }
                                </div>

                                <div>

                                    @Html.Raw(Model[j].FullDescription)

                                </div>
                                <p>
                                    @Html.ActionLink("Назад", "Aksii", "Home", new { NumAksii = @Model[j].Id }, null)
                                </p>
                             <div class="clear-fix"></div>
                               j++;
                            }



                        }
                    }



                }
            </div>
      

        </section>
</div></div>